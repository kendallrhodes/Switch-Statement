let x = new Date();
let dayOfWeek = new Array(7);
dayOfWeek[0] = 'Sunday';
dayOfWeek[1] = 'Monday';
dayOfWeek[2] = 'Tuesday';
dayOfWeek[3] = 'Wednesday';
dayOfWeek[4] = 'Thursday';
dayOfWeek[5] = 'Friday';
dayOfWeek[6] = 'Saturday';
let n = dayOfWeek[x.getDay()];
switch (n) {
	case 'Sunday':
		console.log('Today is my own and no one can take that away from me.');
		break;
	case 'Monday':
		console.log('Today is Monday and I\'m not happy about that.');
		break;
	case 'Tuesday':
		console.log('Today is Tuesday and I\'m not happy about that.');
		break;
	case 'Wednesday':
		console.log('Today is Wednesday and I\'m not happy about that.');
		break;
	case 'Thursday':
		console.log('Today is Thursday and I\'m not happy about that.');
		break;
	case 'Friday':
		console.log(
			'Today is Friday and the day is STILL not my own NOT but there is hope. The weekend begins tomorrow. Hooray!'
		);
		break;
	case 'Saturday':
		console.log('Today is my own and no one can take that away from me.');
		break;
	default:
		console.log("I'm going back to bed");
		break;
}
